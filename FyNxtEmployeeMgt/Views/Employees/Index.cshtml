@model IEnumerable<EmployeeDto>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white">Employee List</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Create New Employee</a>

			</div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>
						First Name
					</th>
					<th>
						Last Name
					</th>
					<th>
						Email
					</th>
					<th>
						Department
					</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@item.FirstName
						</td>
						<td>
							@item.LastName
						</td>
						<td>
							@item.Email
						</td>
						<td>
							@item.Department.DepartmentName
						</td>
						<td>
							<a asp-action="Delete" asp-route-employeeId="@item.EmployeeId" class="btn btn-danger">
								Delete<i class="bi bi-trash"></i>
							</a>
						</td>
						<td>
							<a asp-action="Edit" asp-route-employeeId="@item.EmployeeId" class="btn btn-dark">
								Edit<i class="bi btn-info"></i>
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>

</div>