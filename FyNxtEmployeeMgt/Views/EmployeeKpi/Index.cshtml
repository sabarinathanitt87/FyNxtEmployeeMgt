@model IEnumerable<EmployeeKPI>

<div style="width:fit-content">
    <canvas id="kpiChart"></canvas>
    <canvas id="kpiBarChart"></canvas>
</div>

<script>
    var ctx = document.getElementById('kpiChart').getContext('2d');
    var ctxBar = document.getElementById('kpiBarChart').getContext('2d');
    var employeeName = [];
    var employeeScore = [];
    @foreach (var item in @Model.GroupBy(k => k.KPIName).Select(g => new { KPIName = g.Key, Score = g.Sum(k => k.Score) }))
        {
        @:employeeName.push('@item.KPIName');
        @:employeeScore.push('@item.Score');
        }

    var kpiChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: employeeName,
            datasets: [{
                label: 'Employee KPI Scores',
                data: employeeScore,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Employee KPI Scores'
                }
            }
        }
    });
    var kpiBarChart = new Chart(ctxBar, {
        type: 'bar',
        data: {
            labels: employeeName,
            datasets: [{
                label: 'Employee KPI Bar',
                data: employeeScore,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Employee KPI Bar'
                }
            }
        }
    });
</script>